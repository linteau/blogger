<h1>List of all Tags</h1>
	<ul>
		<% @tags.each do |tag| %>
		<li><%= link_to tag.name, tag_path(tag) %> 

			<% if logged_in? %>

				<%= link_to "delete", tag_path(tag), method: :delete, data: { confirm: "Are you sure you want to delete the tag #{tag.name}?"} %>

			<% end %>



		</li>
		<% end %>
	</ul>
